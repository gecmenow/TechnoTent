@model TechnoTent.Models.ViewModel.ContactsInfoVM

@section AdminHeader
{
    <header class="admin-header">
        <a href="/" class="admin-header__logo">
            <span class="logo-lg"><b>Админ</b> панель</span>
        </a>
        <nav class="navbar-header-top">
            <a href="#" class="settings navbar-header__toggle"><i class="fa fa-cogs" aria-hidden="true"></i></a>
            <ul class="navbar-header__list" style="display: none;">
                <li class="navbar-header__item">
                    <a href="/admin"><i class="fas fa-cog"><span>Настройки</span></i></a>
                </li>
                <li class="navbar-header__item">
                    <a href="/admin/logout"><i class="fas fa-sign-out-alt"><span>Выйти</span></i></a>
                </li>
            </ul>
        </nav>
    </header>
}
<div id="result">
    <main class="main-admin">
        <aside class="admin-sidebar">
            <section class="sidebar">
                <ul class="sidebar__list" data-widget="tree">
                    <li class="sidebar__item" style="height: 37px;"></li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/mainImages">
                            <i class="fas fa-images"></i>
                            <span>Нстройки галереи</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/orders">
                            <i class="fas fa-book-open"></i>
                            <span>Заказы</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/categories">
                            <i class="fas fa-list"></i>
                            <span>Категории</span>
                        </a>
                    </li>
                    @{
                        Html.RenderAction("GetCategoriesAndSubCategoriesForAdmin", "Partial");
                    }
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/add/item/">
                            <i class="fas fa-plus"></i>
                            <span>Добавить товар</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/news">
                            <i class="far fa-newspaper"></i>
                            <span>Статьи</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/news/add">
                            <i class="fas fa-plus"></i>
                            <span>Добавить статью</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/stocks">
                            <i class="far fa-money-bill-alt"></i>
                            <span>Акции</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/stocks/add">
                            <i class="fas fa-plus"></i>
                            <span>Добавить акцию</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/reviews">
                            <i class="fas fa-comments"></i>
                            <span>Отзывы</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/about">
                            <i class="fas fa-id-card"></i>
                            <span>Информация о компании</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/contacts">
                            <i class="fas fa-id-card"></i>
                            <span>Контактная информация</span>
                        </a>
                    </li>
                </ul>
            </section>
        </aside>
        <div class="admin-content-wrapper">
            <section class="admin-content-header">
                <h1 class="admin-page__title">
                    Настройки
                </h1>
            </section>
            <section class="admin-content-main">
                @using (Html.BeginForm("EditHeaderInfo", "AdminMainContacts", FormMethod.Post, new { @class = "setting-main-info-form" }))
                {
                    <label class="edit__title">Контакты в шапке сайта</label>
                    <div class="edit-company-number__wrapper">
                        @for(int i = 0; i < Model.HeaderInfo.Count(); i++)
                        {
                            <div class="edit-company-number">
                                <div class="edit-company-number__item">
                                    <label class="edit__title">Назначение(Рус)</label>
                                    @Html.TextBox("HeaderInfo["+ i +"].NameRu", Model.HeaderInfo[i].NameRu, new { @class = "input-settings-edit" })
                                    @*<input type="text" class="input-settings-edit" name="HeaderInfo.NameRu" value="@info.NameRu">*@
                                </div>
                                <div class="edit-company-number__item">
                                    <label class="edit__title">Назначение(Укр)</label>
                                    @Html.TextBox("HeaderInfo[" + i + "].NameUa", Model.HeaderInfo[i].NameUa, new { @class = "input-settings-edit" })
                                    @*<input type="text" class="input-settings-edit" name="HeaderInfo["+ i +"].NameUa" value="@Model.HeaderInfo[i].NameUa">*@
                                </div>
                                <div class="edit-company-number__item">
                                    <label class="edit__title">Назначение(Англ)</label>
                                    @Html.TextBox("HeaderInfo[" + i + "].NameEn", Model.HeaderInfo[i].NameEn, new { @class = "input-settings-edit" })
                                    @*<input type="text" class="input-settings-edit" name="HeaderInfo["+ i +"].NameEn" value="@Model.HeaderInfo[i].NameEn">*@
                                </div>
                                <div class="edit-company-number__item edit-company-number__item_nymber">
                                    <label class="edit__title">Номер телефона</label>
                                    @Html.TextBox("HeaderInfo["+ i +"].Phone", Model.HeaderInfo[i].Phone, new { @class = "input-settings-edit" })
                                    @*<input type="text" class="input-settings-edit" name="HeaderInfo.Phone" value="@info.Phone">*@
                                </div>
                            </div>
                        }
                    </div>
                    <button type="submit" class="btn btn-success setting-main-info-form__submit">Сохранить</button>
                }
                @using (Html.BeginForm("EditContactsInfo", "AdminMainContacts", FormMethod.Post, new { @class = "setting-main-info-form" }))
                {
                    <label class="edit__title">Контакты на главной</label>
                    <div class="edit-company-number__wrapper">
                        @for (int i = 0; i < Model.Contacts.Count(); i++)
                        {
                            <div class="edit-company-number">
                                <div class="edit-company-number__item">
                                    <label class="edit__title">Назначение(Рус)</label>
                                    @Html.TextBox("Contacts[" + i + "].NameRu", Model.Contacts[i].NameRu, new { @class = "input-settings-edit" })
                                    @*<input type="text" class="input-settings-edit" name="NameRu" value="@Model.Contacts[i].NameRu">*@
                                </div>
                                <div class="edit-company-number__item">
                                    <label class="edit__title">Назначение(Укр)</label>
                                    @Html.TextBox("Contacts[" + i + "].NameUa", Model.Contacts[i].NameUa, new { @class = "input-settings-edit" })
                                    @*<input type="text" class="input-settings-edit" name="NameUa" value="@Model.Contacts[i].NameUa">*@
                                </div>
                                <div class="edit-company-number__item">
                                    <label class="edit__title">Назначение(Англ)</label>
                                    @Html.TextBox("Contacts[" + i + "].NameEn", Model.Contacts[i].NameEn, new { @class = "input-settings-edit" })
                                    @*<input type="text" class="input-settings-edit" name="NameEn" value="@Model.Contacts[i].NameEn">*@
                                </div>
                                <div class="edit-company-number__item edit-company-number__item_nymber">
                                    <label class="edit__title">Номер телефона</label>
                                    @Html.TextBox("Contacts[" + i + "].Phone", Model.Contacts[i].Phone, new { @class = "input-settings-edit" })
                                    @*<input type="text" class="input-settings-edit" name="Phone" value="@Model.Contacts[i].Phone">*@
                                </div>
                            </div>
                         }
                    </div>
                    <button type="submit" class="btn btn-success setting-main-info-form__submit">Сохранить</button>
                }
                @using (Html.BeginForm("EditFooterInfo", "AdminMainContacts", FormMethod.Post, new { @class = "setting-main-info-form" }))
                {
                    <label class="edit__title">Контакты внизу сайта</label>
                    <div class="edit-company-number__wrapper">
                        <div class="edit-company-number">
                            <div class="edit-company-number__item">
                                <label class="edit__title">Адрес(Рус)</label>
                                @Html.TextBox("Footer.AddressEn", Model.Footer.AddressEn, new { @class = "input-settings-edit" })
                                @*<input type="text" class="input-settings-edit" name="AddressEn" value="@Model.Footer.AddressEn">*@
                            </div>
                            <div class="edit-company-number__item">
                                <label class="edit__title">Адрес(Укр)</label>
                                @Html.TextBox("Footer.AddressRu", Model.Footer.AddressRu, new { @class = "input-settings-edit" })
                                @*<input type="text" class="input-settings-edit" name="AddressRu" value="@Model.Footer.AddressRu">*@
                            </div>
                            <div class="edit-company-number__item">
                                <label class="edit__title">Адрес(Англ)</label>
                                @Html.TextBox("Footer.AddressUa", Model.Footer.AddressUa, new { @class = "input-settings-edit" })
                                @*<input type="text" class="input-settings-edit" name="AddressUa" value="@Model.Footer.AddressUa">*@
                            </div>
                        </div>
                        <div class="edit-company-number">
                            <div class="edit-company-number__item edit-company-number__item_nymber">
                                <label class="edit__title">Номер телефона</label>
                                @Html.TextBox("Footer.Phone1", Model.Footer.Phone1, new { @class = "input-settings-edit" })
                                @*<input type="text" class="input-settings-edit" name="Phone1" value="@Model.Footer.Phone1">*@
                            </div>
                            <div class="edit-company-number__item edit-company-number__item_nymber">
                                <label class="edit__title">Номер телефона</label>
                                @Html.TextBox("Footer.Phone2", Model.Footer.Phone2, new { @class = "input-settings-edit" })
                                @*<input type="text" class="input-settings-edit" name="Phone2" value="@Model.Footer.Phone2">*@
                            </div>
                        </div>
                        <div class="edit-company-number">
                            <div class="edit-company-number__item edit-company-number__item_nymber">
                                <label class="edit__title">Емаил</label>
                                @Html.TextBox("Footer.Email", Model.Footer.Email, new { @class = "input-settings-edit" })
                                @*<input type="text" class="input-settings-edit" name="Email" value="@Model.Footer.Email">*@
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success setting-main-info-form__submit">Сохранить</button>
                }
            </section>
        </div>
    </main>
</div>
