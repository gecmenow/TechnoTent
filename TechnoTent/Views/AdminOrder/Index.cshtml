<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".RemoveLink").click(function () {
            var id = $(this).attr("data-id");
            url = "@Url.Action("RemoveOrder", "AdminOrder")?orderId=" + id;
            $('#result').load(url);
        });
    })
</script>

@model PagedList.IPagedList<TechnoTent.Models.ViewModel.OrderVM>
@using PagedList.Mvc;

@section AdminHeader
{
    <header class="admin-header">
        <a href="/" class="admin-header__logo">
            <span class="logo-lg"><b>Админ</b> панель</span>
        </a>
        <nav class="navbar-header-top">
            <a href="#" class="settings navbar-header__toggle"><i class="fa fa-cogs" aria-hidden="true"></i></a>
            <ul class="navbar-header__list" style="display: none;">
                <li class="navbar-header__item">
                    <a href="/admin"><i class="fas fa-cog"><span>Настройки</span></i></a>
                </li>
                <li class="navbar-header__item">
                    <a href="/admin/logout"><i class="fas fa-sign-out-alt"><span>Выйти</span></i></a>
                </li>
            </ul>
        </nav>
    </header>
}
<div id="result">
    <main class="main-admin">
        <aside class="admin-sidebar">
            <section class="sidebar">
                <ul class="sidebar__list" data-widget="tree">
                    <li class="sidebar__item" style="height: 37px;"></li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/mainImages">
                            <i class="fas fa-images"></i>
                            <span>Нстройки галереи</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/orders">
                            <i class="fas fa-book-open"></i>
                            <span>Заказы</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/categories">
                            <i class="fas fa-list"></i>
                            <span>Категории</span>
                        </a>
                    </li>
                    @{
                        Html.RenderAction("GetCategoriesAndSubCategoriesForAdmin", "Partial");
                    }
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/add/item/">
                            <i class="fas fa-plus"></i>
                            <span>Добавить товар</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/news">
                            <i class="far fa-newspaper"></i>
                            <span>Статьи</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/news/add">
                            <i class="fas fa-plus"></i>
                            <span>Добавить статью</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/stocks">
                            <i class="far fa-money-bill-alt"></i>
                            <span>Акции</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/stocks/add">
                            <i class="fas fa-plus"></i>
                            <span>Добавить акцию</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__item-link" href="/admin/reviews">
                            <i class="fas fa-comments"></i>
                            <span>Отзывы</span>
                        </a>
                    </li>
                </ul>
            </section>
        </aside>
        <div class="admin-content-wrapper">
            <section class="admin-content-header">
                <h1 class="admin-page__title">
                    Список заказов
                    <small></small>
                </h1>
            </section>
            <section class="admin-content-main">
                <table class="order-table">
                    <thead>
                        <tr>
                            <th>Опции</th>
                            <th>ID</th>
                            <th>Статус</th>
                            <th>Дата</th>
                            <th>Покупатель</th>
                            <th>Мобильный номер</th>
                            <th>Цена</th>
                        </tr>
                    </thead>
                    @foreach (var order in Model)
                    {
                        <tbody>
                            <tr>
                                <th>
                                    <a href="/admin/order/edit/@order.Id" class="btn btn-warning" data-title="Редактировать заказ"><i class="fas fa-edit"></i></a><br>
                                    <button type="button" class="btn btn-danger RemoveLink" data-title="Удалить заказ" data-id="@order.Id"><i class="fas fa-trash-alt"></i></button>
                                </th>
                                <th>@order.Id</th>
                                <th>
                                    <div class="status-dropdown">
                                        <div class="status-toggle btn btn-warning">@order.OrderStatus</div>
                                        <ul class="status__list" style="display: none;">
                                            <li class="status__item btn btn-warning">В обработке</li>
                                            <li class="status__item btn btn-primary">Выполняется</li>
                                            <li class="status__item btn btn-success">Выполнен</li>
                                            <li class="status__item btn btn-danger">Отказ</li>
                                        </ul>
                                    </div>
                                </th>
                                <th>@order.Date</th>
                                <th>@order.UserName</th>
                                <th>@order.UserPhone</th>
                                @if (order.OrderLanguage == "ru" || order.OrderLanguage == "ua")
                                {
                                    <th>@order.TotalPrice грн</th>
                                }
                                else
                                {
                                    <th>@order.TotalPrice $</th>
                                }
                            </tr>
                        </tbody>
                    }
                </table>
            </section>
        </div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </main>
</div>

